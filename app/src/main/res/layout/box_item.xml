<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_item_light"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/box_vocab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hallo"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:textColor="#111"/>
        <TextView
            android:id="@+id/box_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="---"
            android:textSize="30dp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/box_show_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="نمایش معنی واژه"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">
            <ImageView
            android:id="@+id/box_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/box_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="تعداد مرور:12"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/box_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_delete_24"
                android:layout_weight="1"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>